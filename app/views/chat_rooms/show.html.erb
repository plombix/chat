<h1  id="chat_title"><%= @chat_room.title %></h1>

<div id="messages" data-chat-room-id="<%= @chat_room.id %>" style="background-color:#c1b4ae ;padding-left:10px">
  <%= render @chat_room.messages %>
</div>


<%= bootstrap_form_for @message, url: '#' do |f| %>
  <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
  <div class="form-group" >
    <%= f.text_area :body, class: 'form-control', placeholder: 'From 2 to 1000 characters', id: "message_text_type" %>
   
  </div>

  <%= f.submit "Post", class: 'btn btn-primary btn-block visible-xs' %>
  <%= f.submit "Post", class: 'btn btn-primary btn-lg hidden-xs' %>
<% end %>
